 <section id="middle">
  <div class="container">
  <div class="row">
   <div class="col-md-12">
     <ul class="breadcrumb">
     <li> <%= link_to 'Home', root_path %></li>
        <li> <%= link_to 'Courses', courses_path %></li>
           <li class="active"><%= @course.title %> </li>
           
    </ul>
   </div>
   </div>
	  <div class="panel panel-primary">
	     <div class="panel-heading">
	           <div class="row">
	              <div class="col-sm-8">
				    <div class="panel-heading">
				        <h1><%= @course.title %></h1>
				        <p align="justify"><%= @course.description %></p>
				     </div>
		           </div>
		           <div class="col-sm-4">
				    <div class="panel-heading">
				        <%= image_tag @course.image.url(:thumb) %>
				     </div>
		           </div>
  	            </div><!--/.row-->
	           </div>
	         </div>

	    <div class="row">
	          <div class="col-md-8">
	           <h2>Chapters</h2>
	         </div>
  
			      <% if @course.chapters.count != 0 %>
			       <% @course.chapters.each do |chapter| %>
				      <div class="col-md-8">
					      <div class="panel panel-danger">
					      <div class="panel-heading"><h4><%= chapter.title %></h4></div>
					      <div class="panel-body"><%= image_tag chapter.badge_image.url(:small_thumb), class: "left" if chapter.badge_image? %></div>
					   </div>
				      </div>
				      <div class="col-md-4" style="margin-top:20px;">
   <%= link_to "Get started", course_chapter_path(@course, chapter.id), class: "btn btn-success"   %> 
   </div>
				      <% end %>
				    <% else %>
					  <p><%= @course.title %> has no chapters.</p>
					  <% end %>
		 
           </div>
		 </div>
  
        </div><!--/.container-->
</section>