  <div class="row">
   <div class="col-md-8">
     <ul class="breadcrumb">
     <li> <%= link_to 'Home', admin_dashboard_path %></li>
         <li> <%= link_to 'Courses', admin_courses_path %></li>
        <li> <%= link_to @course.title, admin_course_path(@course.id) %></li>
           <li class="active">Edit Course</li>
    </ul>
   </div>
   </div>  

  <div class="row">
   <div class="col-md-8">
      <h1>Edit Course</h1>
  <div class="panel panel-default">
  <div class="panel-body">
      <%= form_for([:admin, @course], html: { class: "form-horizontal", multipart: true }) do |f| %>
     <% if @course.errors.any? %>
    <div class="alert alert-warning">

        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Warning!</strong>
         <% @course.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </div>
     <% end %>

     <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        <%= f.text_field :title, :class=>"form-control", :id=>"title"  %>
      </div>
     </div>
     <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">
        <%= f.text_area :description, :class=>"form-control", :id=>"description"  %>
      </div>
     </div>
      <div class="form-group">
      <label for="image" class="col-sm-2 control-label">Image</label>
      <div class="col-sm-5">
         <%= image_tag @course.image.url(:thumb) %>
      </div>
      <div class="col-sm-5">
         <%= f.file_field :image %>
      </div>
      </div>
      <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit 'Update Course', :class=>"btn btn-success btn-lg" %>
      </div>
      </div>
    <% end %>
  </div>
  </div>
  </div>
</div>
</div>
