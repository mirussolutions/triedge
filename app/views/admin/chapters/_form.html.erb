  <div class="row">
   <div class="col-md-8">
     <ul class="breadcrumb">
     <li> <%= link_to 'Home', admin_dashboard_path %></li>
         <li> <%= link_to 'Courses', admin_courses_path %></li>
         <li> <%= link_to @course.title, admin_course_path(@course.id) %></li>
           <li class="active">New Chapter</li>
    </ul>
   </div>
   </div>  

  <div class="row">
   <div class="col-md-8">
      <h1>New Chapter</h1>
  <div class="panel panel-default">
  <div class="panel-body">
      <%= form_for([:admin, @course, @chapter], html: { class: "form-horizontal", multipart: true }) do |f| %>
     <% if @chapter.errors.any? %>
    <div class="alert alert-warning">

        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Warning!</strong>
         <% @chapter.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </div>
     <% end %>

     <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        <%= f.text_field :title, :class=>"form-control", :id=>"title"  %>
      </div>
     </div>
     <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">
        <%= f.text_area :description, :class=>"form-control", :id=>"description"  %>
      </div>
     </div>
     <div class="form-group">
      <label for="tagline" class="col-sm-2 control-label">Badge Tagline</label>
      <div class="col-sm-10">
        <%= f.text_field :tagline, :class=>"form-control", :id=>"tagline"  %>
      </div>
     </div>
      <div class="form-group">
      <label for="image" class="col-sm-2 control-label">Badge Image</label>
      <div class="col-sm-10">
         <%= f.file_field :badge_image %>
      </div>
      </div>
      <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit 'Add Chapter', :class=>"btn btn-success btn-lg" %>
      </div>
      </div>
    <% end %>
  </div>
  </div>
  </div>
</div>
</div>

