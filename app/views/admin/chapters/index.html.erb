<h1>Listing chapters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.title %></td>
        <td><%= chapter.description %></td>
        <td><%= chapter.course_id %></td>
        <td><%= link_to 'Show', [:admin, chapter] %></td>
        <td><%= link_to 'Edit', edit_admin_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', [:admin, chapter], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

