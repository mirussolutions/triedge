<div class="row">
   <div class="col-md-8">
     <ul class="breadcrumb">
     <li> <%= link_to 'Home', admin_dashboard_path %></li>
         <li> <%= link_to 'Courses', admin_chapters_path %></li>
         <li> <%= link_to @chapter.course.title, admin_course_path(@chapter.course_id) %></li>
         <li> <%= link_to @chapter.title, admin_chapter_path(@chapter.id) %></li>
         <li> <%= link_to @quiz.title, admin_quiz_path(@quiz.id)  %></li>
         <li> <%= link_to @question.title, admin_quiz_question_path(@quiz.id, @question.id)  %></li>
           <li class="active">Edit Answer</li>
    </ul>
   </div>
   </div>  

  <div class="row">
   <div class="col-md-8">
      <h1>Edit Answer</h1>
  <div class="panel panel-default">
  <div class="panel-body">
      <%= form_for([:admin, @question, @answer], html: { class: "form-horizontal" }) do |f| %>
     <% if @answer.errors.any? %>
    <div class="alert alert-warning">

        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Warning!</strong>
         <% @answer.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </div>
     <% end %>

     <div class="form-group">
        <label for="title" class="col-sm-3 control-label">Answer Title</label>
      <div class="col-sm-8">
        <%= f.text_field :title, :class=>"form-control", :id=>"title"  %>
      </div>
     </div>
     <div class="form-group">
        <label for="correct" class="col-sm-3 control-label">Is Correct?</label>
      <div class="col-sm-1">
        <%= f.check_box :is_correct, :class=>"form-control", :id=>"correct"  %>
      </div>
     </div>
      <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit 'Update Answer', :class=>"btn btn-success btn-lg" %>
      </div>
      </div>
    <% end %>
  </div>
  </div>
  </div>
</div>
</div>
