<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Chapter</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.chapter_id %></td>
        <td><%= link_to 'Show', [:admin, quiz] %></td>
        <td><%= link_to 'Edit', edit_admin_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', [:admin, quiz], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

