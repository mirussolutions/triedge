<p id="notice"><%= notice %></p>
<div class="row">
   <div class="col-md-8">
     <ul class="breadcrumb">
     <li> <%= link_to 'Home', admin_dashboard_path %></li>
        <li> <%= link_to 'Courses', admin_courses_path %></li>
        <li> <%= link_to @chapter.course.title, admin_course_path(@chapter.course_id) %></li>
        <li> <%= link_to @chapter.title, admin_chapter_path(@chapter.id) %></li>
           <li class="active"><%= @quiz.title %> </li>
           
    </ul>
   </div>
   </div>
 <div class="row">
   <div class="col-md-8">
		<p>
		 <h1><%= @quiz.title %></h1>
		</p>

		
	 </div>
<div class="col-md-4">
<%= link_to "Edit Quiz", edit_admin_chapter_quiz_path(@quiz.chapter_id, @quiz.id), class: "btn btn-success" %> 
<%= link_to "Delete Quiz", admin_chapter_quiz_path(@quiz.chapter_id, @quiz.id), class: "btn btn-danger", method: :delete, data: { confirm: "This will also delete all the questions and answers. Do you want to proceed?" } %>
</div>
</div>
<div class="row">
   <div class="col-md-8">
	 <h3>Questions</h3>
		
		<div class="panel panel-default">
		  <div class="panel-body">
		  <% if @quiz.questions.count !=0 %>
		    <table>
			  <thead>
			    <tr>
			      <th>Question Title</th>
			      </tr>
			  </thead>

			  <tbody>
			    <% @quiz.questions.each do |question| %>
			      <tr>
			        <td><%= link_to question.title, admin_quiz_question_path(@quiz.id, question.id) %></td>
			       </tr>
			    <% end %>
			  </tbody>
			</table>
		  <% else %>
		  <p><%= @quiz.title %> has no questions.</p>
		  <% end %>
		  </div>
		</div>
	 </div>
<div class="col-md-4" style="margin-top:60px;">
<%= link_to "Add Question", new_admin_quiz_question_path(@quiz.id), class: "btn btn-success" %> 
</div>
</div>