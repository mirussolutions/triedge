<section id="middle">
 <div class="container">
<div class="row">
   <div class="col-md-12">
     <ul class="breadcrumb">
     <li> <%= link_to 'Home', root_path %></li>
        <li> <%= link_to 'Courses', courses_path %></li>
        <li> <%= link_to @chapter.course.title, course_path(@chapter.course_id) %></li>
        <li> <%= link_to @chapter.title, chapter_path(@chapter.id) %></li>
           <li class="active"><%= @quiz.title %> </li>
           
    </ul>
   </div>
   </div>
<div class="row">
   <div class="col-md-8">
	 <h1 class="title"><%= @quiz.title %></h1>
		
		<div class="panel panel-default">
		  <div class="panel-body">

		   <h2><%= @question.title %> </h2>
		  <% if @question.answers != [] %>
		  <%= form_tag update_answer_path, method: :post, html: { class: "form-horizontal"} do %>
		  <% @question.answers.each do |answer| %>
          <div class="radio">
           <label>
           <%= radio_button_tag :id, answer.id, false %><%= answer.title %>
           </label>
          </div>

          <% end %>
           <%= submit_tag "Answer Question", class: "btn btn-info" %>
          <% end %>

		  <% else %>
		  <p><%= @question.title %> has no answers.</p>
		  <% end %>
		  </div>
		</div>
	 </div>
         <div class="col-md-4" style="margin-top:70px;">
            <div class="panel-quiz" style="padding:20px;">
             <p><h2><%= @quiz.title %></h2></p>
            
                        <div class="progress-wrap">
                            <h3><%= quiz_status(@question) %></h3>
                            <div class="progress">
                              <div class="progress-bar  color1" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= percentage_completed(@question) %>%">
                                
                              </div>

                            </div>
                        </div>

             </div>
           </div>
</div>



</div>
</section>